{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://big-map.github.io/big-map-registry/schemas/v1/metadata.schema.json",
    "$ref": "#/definitions/Welcome",
    "definitions": {
        "Welcome": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "title": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "authors": {
                    "type": "string"
                },
                "affiliations": {
                    "type": "string"
                },
                "videos":{
                    "installation_url": {
                        "type": "string",
                        "format": "uri"
                    },
                    "demonstration_url": {
                        "type": "string",
                        "format": "uri"
                    }
                },
                "version": {
                    "type": "string"
                },
                "logo": {
                    "type": "string"
                },
                "state": {
                  "type": "string",
                  "enum": ["registered", "development", "stable"]
                },
                "documentation_url": {
                  "type": "string",
                  "format": "uri"
                },
                "external_url": {
                  "type": "string",
                  "format": "uri"
                },
                "requires": {
                  "type": "object",
                  "patternProperties": {
                    ".*": {"$ref": "#/definitions/Requirements"}
                  }
                }
            },
            "required": [
                "description",
                "title"
            ],
            "title": "Welcome"
        },
        "Requirements": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "title": "Requirements"
        }
    }
}
